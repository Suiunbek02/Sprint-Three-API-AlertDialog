<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.TestFragment">

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/lite_blue"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/edit_text"
        android:padding="15dp"
        android:layout_marginTop="35dp"
        android:text="@string/hello_blank_fragment" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_text"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="@id/et_text"
        android:backgroundTint="@color/greenTrans"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        app:layout_constraintEnd_toEndOf="@id/et_text"
        android:padding="15dp"
        android:textAllCaps="true"
        android:text="well ok"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="@id/et_text"
        android:backgroundTint="@color/greenTrans"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="@id/et_text"

        android:padding="15dp"
        android:textAllCaps="true"
        android:text="well ok"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintStart_toStartOf="@id/et_text"
        android:backgroundTint="@color/greenTrans"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="@id/et_text"

        android:padding="15dp"
        android:textAllCaps="true"
        android:text="well ok"/>

</androidx.constraintlayout.widget.ConstraintLayout>